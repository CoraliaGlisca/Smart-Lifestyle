@page
@model LoginModel

@{
    ViewData["Title"] = "Welcome back!";
}
<div style="text-align:center">
    <h1>@ViewData["Title"]</h1>
    <h4>Let's continue our adventure together!</h4>
    <img src="~/images/ppleat.jpg" style="width: 50%" />
</div>
<div class="row" style="align-items:center">
    <div class="col-md-4 offset-4">
        <section>
            <form id="account" method="post">
                
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" style="border-color: #2B6777; border-radius: 25px"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" style="border-color: #2B6777; border-radius: 25px"/>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" style="margin-right:0"/>
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <div class="form-group offset-9" >
                    <button type="submit" class="btn btn-outline-button4">Log in</button>
                </div>
                <div class="form-group offset-6">
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
